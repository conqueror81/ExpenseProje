<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fatih.expenseproje.MainActivity">

    <Button
        android:text="KAYIT EKLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btEklemeActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="LİSTELE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btListeleActivity"
        android:layout_below="@+id/btEklemeActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="PIE CHART GÖSTERİM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btPiechart"
        android:layout_below="@+id/btListeleActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Gelir Gider Durumu"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_above="@+id/tvBilgi"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvBilgi"
        android:textAlignment="center"
        android:textSize="30sp" />

</LinearLayout>
